--display database ordered by aisle
SELECT * FROM clothing_store ORDER BY aisle;

--display database ordered by quantitiy
SELECT * FROM clothing_store ORDER BY quantity;

--display database ordered by price
SELECT * FROM clothing_store ORDER BY price asc;
